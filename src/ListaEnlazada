public class ListaEnlazada{
    Nodo cabeza;

    public ListaEnlazada{
      cabeza = null;
    }

    //Agregar
    public void AgregarAlFinal(int dato){
        Nodo nuevo = new Nodo (dato);
    
        //Caso 1: lista vacia
        if(cabeza == null){
        cabeza = nuevo;
        } else {
            Nodo actual = cabeza;
            while(actual.siguiente != null){
                actual = actual.siguiente;
            }
        actual.siguiente = nuevo;
        }
    }

    public void Ordenar(int dato){
        Nodo actual = cabeza;

        //Caso 1: Lista vacia o nuevo valor menor que cabeza
        while(cabeza == null || dato < actual.dato.siguiente){
            actual = actual.siguiente;
        }
        actual.siguiente = nuevo;

        //Caso 2: Buscar donde insertar
        
    }

    public void AgregarAlInicio(int dato){
        Nodo nuevo = new Nodo (dato);รง
        nuevo.siguiente = cabeza;
        cabeza = nuevo;
    }

    public void Mostrar(){
        Nodo actual = cabeza;
        while(actual != null){
            System.out.print(actual.dato + " -> ");
            actual = actual.siguiente;
        }
        System.out.println("null");
    }
}
